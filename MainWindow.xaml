<Window x:Class="LU4_Walker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LU4 Walker"
        Width="400"
        Height="220"
        WindowStyle="None"
        Topmost="True"
        ResizeMode="NoResize"
        Background="#2C2C2C"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Background="#2C2C2C">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,10">
                <TextBlock Text="LU4 Walker"
                           FontWeight="Bold"
                           FontSize="16"
                           Foreground="White"
                           VerticalAlignment="Center"/>
                <Button Content="X"
                        Width="30"
                        Height="25"
                        Background="DarkRed"
                        Foreground="White"
                        FontWeight="Bold"
                        DockPanel.Dock="Right"
                        Click="btnClose_Click"/>
            </DockPanel>

            <!-- ComboBox -->
            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10">
                <Label Content="Окно:" Width="60" Foreground="White"/>
                <ComboBox x:Name="cbWindows"
                          Width="280"
                          DropDownOpened="cbWindows_DropDownOpened"/>
            </StackPanel>

            <!-- Старт / Стоп -->
            <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" Margin="0,0,0,10">
                <Button x:Name="btnStart"
                        Content="Старт"
                        FontWeight="Bold"
                        Background="Green"
                        Foreground="White"
                        Width="100"
                        Margin="5"
                        Click="btnStart_Click"/>
                <Button x:Name="btnStop"
                        Content="Стоп"
                        FontWeight="Bold"
                        Background="Red"
                        Foreground="White"
                        Width="100"
                        Margin="5"
                        Click="btnStop_Click"
                        IsEnabled="False"/>
            </StackPanel>

            <!-- Скриншоты -->
            <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Center" Margin="0,0,0,10">
                <Button x:Name="btnScreenshot"
                        Content="📸"
                        ToolTip="Скриншот по выбранному окну"
                        Width="60"
                        Click="btnScreenshot_Click"
                        Margin="5"/>
                <Button x:Name="btnOcrScreenshot"
                        Content="🔍"
                        ToolTip="OCR по выбранному окну"
                        Width="60"
                        Click="btnOcrScreenshot_Click"
                        Margin="5"/>
            </StackPanel>

            <!-- Подсказка -->
            <TextBlock Grid.Row="4"
                       Text="PageUp / PageDown — запуск и остановка. Все действия по HWND LU4."
                       Foreground="LightGray"
                       FontStyle="Italic"
                       FontSize="12"
                       HorizontalAlignment="Center"/>
        </Grid>
    </Border>
</Window>
